{
  "manifest_version": 2,
  "name": "Clipboard Regex Replacer",
  "version": "1.0",
  "author": "PlayWolfYT",
  "description": "Monitors clipboard content and applies regex replacement rules",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Clipboard Regex Replacer"
  }
}